<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black" >
    <TextView 
        android:id="@+id/whatdream_one"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_centerHorizontal="true"
    	android:text="What" 
    	android:textSize="30dip"
    	android:textColor="@color/blue"
    	android:textStyle="bold"/>
	<TextView 
        android:id="@+id/whatdream_two"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_below="@+id/whatdream_one"
    	android:layout_marginTop="20dip"
    	android:layout_centerHorizontal="true"
    	android:text="Is" 
    	android:textSize="30dip"
    	android:textColor="@color/blue"
    	android:textStyle="bold"/>
	<TextView 
        android:id="@+id/whatdream_three"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_below="@+id/whatdream_two"
    	android:layout_marginTop="20dip"
    	android:layout_centerHorizontal="true"
    	android:text="Your" 
    	android:textSize="30dip"
    	android:textColor="@color/blue"
    	android:textStyle="bold"/>
	<TextView 
        android:id="@+id/whatdream_four"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_below="@+id/whatdream_three"
    	android:layout_marginTop="20dip"
    	android:layout_centerHorizontal="true"
    	android:text="Dream" 
    	android:textSize="30dip"
    	android:textColor="@color/blue"
    	android:textStyle="bold"/>

	<TextView 
        android:id="@+id/whatdream_dream"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
		android:layout_centerHorizontal="true"
    	android:layout_alignParentBottom="true"
    	android:text="梦想" 
    	android:textSize="100dip"
    	android:textColor="@color/blue"
    	android:textStyle="bold"/>
	
</RelativeLayout>
